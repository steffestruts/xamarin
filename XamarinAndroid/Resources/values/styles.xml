<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <!-- Application Style -->
  <style name="Marvelous" parent="android:Theme.Material.NoActionBar">
    <item name="android:colorPrimary">@color/darkColor</item>
  </style>
  <!-- Login Activity -->
  <style name="loginActivity">
    <item name="android:gravity">center_vertical</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:orientation">vertical</item>
    <item name="android:padding">36dp</item>
  </style>
  <style name="loginSlogan">
    <item name="android:fontFamily">sans-serif-black</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginBottom">20dp</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:maxWidth">250dp</item>
    <item name="android:textColor">@color/lightColor</item>
    <item name="android:textStyle">normal</item>
    <item name="android:textSize">40dp</item>
  </style>
  <style name="loginLabel">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:textColor">@color/lightColor</item>
    <item name="android:textSize">16dp</item>
    <item name="android:textStyle">bold</item>
  </style>
  <style name="loginInput">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">match_parent</item>
  </style>
  <style name="loginButton">
    <item name="android:background">@drawable/button</item>
    <item name="android:layout_gravity">center_horizontal</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginBottom">16dp</item>
    <item name="android:layout_marginTop">16dp</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textColor">@color/lightColor</item>
    <item name="android:textSize">16dp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:width">175dp</item>
  </style>
  <style name="loginForgot">
    <item name="android:background">@android:color/transparent</item>
    <item name="android:layout_gravity">center_horizontal</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:textAllCaps">false</item>
     <item name="android:textColor">@color/lightColor</item>
  </style>
  <!-- Catalog/Custom Row Activity -->
  <style name="customListRow">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:orientation">vertical</item>
    <item name="android:padding">16dp</item>
  </style>
  <style name="txtItemTitle">
    <item name="android:alpha">0.9</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    <item name="android:textStyle">bold</item>
  </style>
  <style name="txtItemSubtitle">
    <item name="android:alpha">0.4</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
  </style>
  <!-- Campaign Activity -->
  <style name="campaignActivity">
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:orientation">vertical</item>
    <item name="android:padding">32dp</item>
  </style>
  <style name="txtCampaignName">
    <item name="android:alpha">0.9</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginBottom">-6dp</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    <item name="android:textSize">32dp</item>
    <item name="android:textStyle">bold</item>
  </style>
  <style name="txtCampaignCategory">
    <item name="android:alpha">0.4</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginBottom">24dp</item>
    <item name="android:layout_width">wrap_content</item>
  </style>
  <style name="txtCampaignDescription">
    <item name="android:alpha">0.9</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginBottom">36dp</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:lineSpacingMultiplier">1.4</item>
    <item name="android:textSize">16dp</item>
  </style>
  <style name="txtCampaignContent">
    <item name="android:alpha">0.9</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    <item name="android:textSize">32dp</item>
    <item name="android:textStyle">bold</item>
  </style>
  <style name="txtCampaignSubtitle">
    <item name="android:alpha">0.6</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">-4dp</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:textAllCaps">true</item>
  </style>
  <style name="layoutDate">
    <item name="android:background">@drawable/circle</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_gravity">center_horizontal</item>
    <item name="android:layout_height">125dp</item>
    <item name="android:layout_marginBottom">32dp</item>
    <item name="android:layout_width">125dp</item>
    <item name="android:orientation">vertical</item>
  </style>
  <style name="layoutSubscribers">
    <item name="android:background">@drawable/circle</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_gravity">center_horizontal</item>
    <item name="android:layout_height">250dp</item>
    <item name="android:layout_width">250dp</item>
    <item name="android:orientation">vertical</item>
  </style>
</resources>